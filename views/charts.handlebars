<div class="flex justify-center h-screen w-screen">
<div class="w-5/6 relative shadow-md sm:rounded-lg">
    <table class="table-fixed w-full text-sm text-left rtl:text-right text-white ">
        <thead class="text-xs bg-gray-900 uppercase">
            <tr>
                <th scope="col" class="text-center px-6 py-3">
                    Song
                </th>
                <th scope="col" class="text-center px-6 py-3">
                    Artist
                </th>
                <th scope="col" class="text-center px-6 py-3 hidden lg:flex">
                    Album
                </th>
                <th scope="col" class="text-center px-6 py-3">
                    Avg Rating
                </th>
            </tr>
        </thead>
        <tbody class="bg-slate-300 text-gray-700"> 
            {{#each ratings}}
            {{> musiccharts}}
            {{/each}}
        </tbody>
    </table>
</div>
</div>
