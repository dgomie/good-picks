<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{{title}}}</title>
    <link rel="stylesheet" href="/css/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.css"
      rel="stylesheet"
    />
    <link rel="icon" type="image/svg+xml" href="images/goodpicks-flavicon.svg" />
  </head>

  <nav class=" border-gray-200 bg-gray-900">
    <div
      class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4"
    >
      <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
        <img
          src="/images/goodpicks-logo.png"
          class="h-10"
          alt="Good Picks Logo"
        />
        <span
          class="self-center text-2xl font-semibold whitespace-nowrap text-white"
        >GoodPicks</span>
      </a>

      <div
        class="flex items-center md:order-2 space-x-3 md:space-x-0 rtl:space-x-reverse"
      >
        {{#if loggedIn}}
          <button
            type="button"
            class="flex text-sm bg-gray-800 rounded-full md:me-0 focus:ring-4 focus:ring-gray-600"
            id="user-menu-button"
            aria-expanded="false"
            data-dropdown-toggle="user-dropdown"
            data-dropdown-placement="bottom"
          >
            <span class="sr-only">Open user menu</span>
            <img
              class="w-8 h-8 rounded-full"
              src="/images/alphabet/{{profileImg}}-letter.512x512.png"
              alt="user photo"
              onerror="this.onerror=null; this.src='/images/alphabet/default-letter.512x512.png';"
            />
          </button>
          <!-- Dropdown menu -->
          <div
            class="z-50 hidden my-4 text-base list-none divide-y rounded-lg shadow bg-gray-700 divide-gray-600"
            id="user-dropdown"
          >
            <div class="px-4 py-3">
              <span
                class="block text-sm text-white"
              >{{username}}</span>
              <span
                class="block text-sm truncate text-gray-400"
              >{{email}}</span>
            </div>
            <ul class="py-2" aria-labelledby="user-menu-button">
              <li>
                <a
                  href="/settings"
                  class="block px-4 py-2 text-sm hover:bg-gray-600 text-gray-200 hover:text-white"
                >Settings</a>
              </li>
              <li>
                <a
                  href="#"
                  id="logout"
                  class="block px-4 py-2 text-sm hover:bg-gray-600 text-gray-20 hover:text-white"
                >Sign out</a>
              </li>
            </ul>
          </div>
        {{/if}}
        <button
          data-collapse-toggle="navbar-user"
          type="button"
          class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm  rounded-lg md:hidden focus:outline-none focus:ring-2  text-gray-400 hover:bg-gray-700 focus:ring-gray-600"
          aria-controls="navbar-user"
          aria-expanded="false"
        >
          <span class="sr-only">Open main menu</span>
          <svg
            class="w-5 h-5"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 17 14"
          >
            <path
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M1 1h15M1 7h15M1 13h15"
            />
          </svg>
        </button>
      </div>

      <div
        class="items-center justify-between hidden w-full md:flex md:w-auto md:order-1 text-center md:mr-20 md:pr-11"
        id="navbar-user"
      >
        <ul
          class="flex flex-col font-medium p-4 md:p-0 mt-4 border  rounded-lg  md:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0 md:border-0 bg-gray-800 md:bg-gray-900 border-gray-700 justify-center"
        >
          {{#unless loggedIn}}
            <li>
              <a
                href="/"
                class="block py-2 px-3 hover:text-blue-500 text-white bg-blue-700 rounded md:bg-transparent md:p-0 md:text-white"
                aria-current="page"
              >Home</a>
            </li>
          {{/unless}}
          <li>
            <a
              href="/charts"
              class="block py-2 px-3 rounded md:p-0 text-white md:hover:text-blue-500 hover:bg-gray-700 hover:text-white md:hover:bg-transparent border-gray-700"
            >Top Songs</a>
          </li>
          {{#if loggedIn}}
            <li>
              <a
                href="/dashboard"
                class="block py-2 px-3  rounded  md:p-0 text-white md:hover:text-blue-500 hover:bg-gray-700 hover:text-white md:hover:bg-transparent border-gray-700"
              >Dashboard</a>
            </li>
            <li>
              <a
                href="/profile/{{username}}"
                class="block py-2 px-3 rounded md:p-0 text-white md:hover:text-blue-500 hover:bg-gray-700 hover:text-white md:hover:bg-transparent border-gray-700"
              >Profile</a>
            </li>
          {{/if}}
        </ul>
      </div>
    </div>
  </nav>
  <body class="bg-slate-600 text-white">

    <main class="container-fluid mt-5">
      {{{body}}}
    </main>

    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.js"
    ></script>
    {{#if loggedIn}}
      <script src="/js/logout.js"></script>
    {{/if}}

  </body>

</html>