<div class="container giantContainer max-w-full">
    <div class="header border-b-2 text-center justify-center">

        <h2 class="p-5 text-center "><strong>Welcome {{ username }}</strong></h2>

    </div>
    <button class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded-full" id="modalBtn">Good
        Picks</button>
    <div>
        <div class="modal" id="modalContainer">
            <div class="modal-content">
                <form>
                    <div class="modal-header">
                        <span class="close">&times;</span>
                        <h2>Good Picks</h2>
                    </div>
                    <div class="modal-body">
                        <div class="flex justify-center">
                            <div class="flex flex-col">
                                <label for="song">Song</label>
                                <input type="text" id="song" name="song" required>
                            </div>
                            <div class="flex flex-col">
                                <label for="artist">Artist</label>
                                <input type="text" id="artist" name="artist" required>
                            </div>
                        </div>
                        <div class="flex justify-center">
                            <div class="flex flex-col">
                                <label for="album">Album</label>
                                <input type="text" id="album" name="album" required>
                            </div>
                            <div class="flex flex-col">
                                <label for="genre">Genre</label>
                                <input type="text" id="genre" name="genre" required>
                            </div>
                        </div>
                        <div class="flex justify-center">
                            <div class="flex flex-col">
                                <label for="rating">Rating</label>
                                <input type="text" id="rating" name="rating" required>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
